<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:a="http://schemas.android.com/apk/res/android"
    a:orientation="vertical"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:theme="@style/app_theme"
    a:padding="10dp">

    <TextView
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:id="@+id/details_size"/>

    <TextView
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:id="@+id/details_lastmod"/>

    <TextView
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:id="@+id/details_mime"/>

    <TextView
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:id="@+id/details_md5"/>

    <LinearLayout
        a:layout_width="wrap_content"
        a:layout_height="wrap_content">

        <Button
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:text="copy"
            a:id="@+id/details_md5_copy"/>

        <Button
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:id="@+id/details_md5_check"
            a:text="check clipboard"/>

    </LinearLayout>

</LinearLayout>